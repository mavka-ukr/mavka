взяти означення мавка;
взяти означення мавка/розбирач;

простір мавка {
  простір перекладач {
    структура Код {
      шлях: адреса<ПредметБайтів>;
      накопичувач_констант: Накопичувач<адреса<Предмет>>;
      будівельник_вказівок: БудівельникВказівок;
    }

    структура ПомилкаПерекладуВМаМа {
      повідомлення: кд;
      позиція_слова: природне;
    }

    структура КонтекстПерекладу {
      початок_циклу: природне;
    }

    місцева дія створити_код(М: адреса<Машина>, шлях: адреса<ПредметБайтів>): адреса<Код>;
    місцева дія знищити_код(М: адреса<Машина>, код: адреса<Код>);
    місцева дія створити_контекст(М: адреса<Машина>): адреса<КонтекстПерекладу>;
    місцева дія знищити_контекст(М: адреса<Машина>, контекст: адреса<КонтекстПерекладу>);
    місцева дія створити_предмет_коду_з_коду_перекладача(М: адреса<Машина>, код: адреса<Код>) -> адреса<ПредметКоду>;
    місцева дія перекласти(М: адреса<Машина>, значення_коду_кд: кд, слова: розбирач::Слова, сполуки: розбирач::Сполуки, вернути_в_кінці: логічне, контекст: адреса<КонтекстПерекладу>, код: адреса<Код>, вихід_помилки: адреса<ПомилкаПерекладуВМаМа>): логічне;
  }
}