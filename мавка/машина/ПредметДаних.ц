взяти означення мавка;

простір мавка {
  місцева дія створити_дані(М: адреса<Машина>, розмір: природне, дані: памʼять<п8>) -> адреса<ПредметДаних> {
    змінна предмет = виділити_предмет<ПредметДаних>(М, М.предмет_структури_Дані);
    змінна копія_даних = виділити_памʼять<п8>(М, розмір);
    
    змінна п: природне = 0;
    поки п < розмір {
      копія_даних[п] = дані[п];
      п += 1;
    }
    
    предмет.розмір = розмір;
    предмет.дані = копія_даних;
    
    вернути предмет;
  }

  місцева дія створити_дані_без_копіювання(М: адреса<Машина>, розмір: природне, дані: памʼять<п8>) -> адреса<ПредметДаних> {
    змінна предмет = виділити_предмет<ПредметДаних>(М, М.предмет_структури_Дані);
    
    предмет.розмір = розмір;
    предмет.дані = дані;
    
    вернути предмет;
  }
}