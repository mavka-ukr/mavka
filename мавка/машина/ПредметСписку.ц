взяти означення мавка;

простір мавка {
  місцева дія створити_список(М: адреса<Машина>, розмір: природне) -> Значення {
    змінна предмет = виділити_предмет(М, М.значення_структура_Список як Значення);

    змінна дані: памʼять<Значення> = пусто;
    
    якщо розмір > 0 {
      дані = виділити_памʼять<Значення>(М, розмір);
      змінна п: природне = 0;

      поки п < розмір {
        дані[п] = пусто як Значення;
        
        п += 1;
      }
    }

    предмет.властивості = ВластивостіСписку {
      розмір, 
      дані
    };

    вернути предмет як Значення;
  }

  місцева дія записати_в_список(М: адреса<Машина>, значення_списку: Значення, позиція: природне, значення: Значення) {
    змінна властивості = (значення_списку як адреса<Предмет>).властивості як ВластивостіСписку;

    якщо позиція >= властивості.розмір {
      запанікувати(М, "Індекс виходить за межі списку");
    }

    властивості.елементи[позиція] = значення;
  }
}