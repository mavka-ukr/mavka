;; тест 4: додавання від'ємного та додатного (протилежний порядок)
а = -50.8
б = 80.3
результат = а + б
очікуваний_результат = 29.5
якщо результат != очікуваний_результат
  впасти "тест 4: результат має бути %(очікуваний_результат), а рівно %(результат)"
кінець

;; тест 5: дуже малі числа
а = 0.00001
б = 0.00002
результат = а + б
очікуваний_результат = 0.000030000000000000004
якщо результат != очікуваний_результат
  впасти "тест 5: результат має бути %(очікуваний_результат), а рівно %(результат)"
кінець