;; тест 0: проста остача
а = 17
б = 5
результат = а % б
очікуваний_результат = 2
якщо результат != очікуваний_результат
  впасти "тест 0: результат має бути %(очікуваний_результат), а рівно %(результат)"
кінець

;; тест 1: остача без залишку
