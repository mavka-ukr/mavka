взяти пак інструменти_тестування

значення = "Привіт від Лесі!"

якщо значення.чародія_перебір() не є предмет
  впасти
кінець
якщо значення.чародія_перебір().далі не є Дія
  впасти
кінець

нове_значення = []
перебрати значення як ел
  нове_значення.додати(ел)
кінець

якщо інструменти_тестування.списки_не_рівні(['П', 'р', 'и', 'в', 'і', 'т', ' ', 'в', 'і', 'д', ' ', 'Л', 'е', 'с', 'і', '!'], нове_значення)
  впасти
кінець