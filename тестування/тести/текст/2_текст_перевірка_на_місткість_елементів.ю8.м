значення = "Привіт від Лесі!"

якщо (значення містить 'П') не рівно так
  впасти
кінець
якщо (значення містить 'в') не рівно так
  впасти
кінець
якщо (значення містить '?') не рівно ні
  впасти
кінець
якщо (значення містить "Привіт") не рівно так
  впасти
кінець
якщо (значення містить "від") не рівно так
  впасти
кінець
якщо (значення містить "леся") не рівно ні
  впасти
кінець