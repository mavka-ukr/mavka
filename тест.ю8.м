взяти біб інтернет

дія обробити_підключення(підключення)
  друк("підключено!", підключення)
кінець

дія обробити_повідомлення(підключення, повідомлення)
  друк("повідомлення", повідомлення)
кінець

дія обробити_відключення(підключення)
  друк("відключено!")
кінець

підключення = інтернет.створити_підключення("127.0.0.1", 8080)

підключення.обробник_підключення = обробити_підключення
підключення.обробник_повідомлення = обробити_повідомлення
підключення.обробник_відключення = обробити_відключення

підключення.підключитись()