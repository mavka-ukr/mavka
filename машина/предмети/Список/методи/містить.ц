взяти означення мавка/машина;

простір мавка {
  дія рідна_дія_методу_структури_Список__містить(
    М: адреса<Машина>,
    здійснювач: адреса<Предмет>,
    предмет_дії: адреса<ПредметДії>,
    задіяні: Задіяні
  ) -> ПредметАбоСтанПадіння {
    якщо здійснювач == пусто {
      увімкнути_стан_падіння(
        М,
        значення_предмет(створити_текст(М, "Неможливо здійснити дію списку \"містить\".")),
        Місцезнаходження { пусто, 0 }
      );
      вернути пусто;
    }

    змінна предмет_списку = здійснювач як адреса<ПредметСписку>;

    якщо предмет_списку.тип != М.предмет_структури_Список {
      увімкнути_стан_падіння(
        М,
        значення_предмет(створити_текст(М, "Неможливо здійснити дію списку \"містить\".")),
        Місцезнаходження { пусто, 0 }
      );
      вернути пусто;
    }

    змінна задіяне_значення: адреса<Предмет> = пусто;

    знайти_задіяне(М, задіяні, 0, М.константи_назв._значення, задіяне_значення::адреса);

    змінна п: природне = 0;

    поки п < предмет_списку.розмір {
      якщо перевірити_чи_значення_рівні(М, предмет_списку.елементи[п], задіяне_значення) {
        вернути М.значення_дійсне;
      }

      п += 1;
    }

    вернути пусто;
  }

  місцева дія записати_метод_структури_Список__містить(
    М: адреса<Машина>
  ) {
    змінна предмет_дії = створити_рідну_дію(
      М,
      М.константи_назв._містить,
      М.предмет_пустої_послідовності,
      пусто,
      рідна_дія_методу_структури_Список__містить,
      пусто
    );

    записати_метод_структури(
      М,
      М.предмет_структури_Список,
      М.константи_назв._містить,
      предмет_дії
    );

    якщо М.стан_падіння {
      запанікувати(М, "Помилка при записі дії \"містить\" для структури \"Список\".");
    }
  }
}