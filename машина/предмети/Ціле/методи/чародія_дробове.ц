взяти означення мавка/машина;

простір мавка {
  дія рідна_дія_методу_структури_Ціле__чародія_дробове(
    М: адреса<Машина>,
    здійснювач: Значення,
    предмет_дії: адреса<ПредметДії>,
    задіяні: Задіяні
  ) -> ЗначенняАбоСтанПадіння {
    якщо здійснювач.вид != ЗЦіле {
      увімкнути_стан_падіння(
        М,
        значення_предмет(створити_текст(М, "Неможливо здійснити дію цілого \"чародія_дробове\".")),
        Місцезнаходження { пусто, 0 }
      );
      вернути значення_недійсне();
    }

    вернути значення_дробове(д64(здійснювач.дані як ц64));
  }

  місцева дія записати_метод_структури_Ціле__чародія_дробове(
    М: адреса<Машина>
  ) {
    змінна предмет_дії = створити_рідну_дію(
      М,
      М.константи_назв._чародія_дробове,
      М.предмет_пустої_послідовності,
      пусто,
      рідна_дія_методу_структури_Ціле__чародія_дробове,
      пусто
    );

    записати_метод_структури(
      М,
      М.предмет_структури_Ціле,
      М.константи_назв._чародія_дробове,
      предмет_дії
    );

    якщо М.стан_падіння {
      запанікувати(М, "Помилка при записі дії \"чародія_дробове\" для структури \"Ціле\".");
    }
  }
}