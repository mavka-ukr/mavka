взяти означення мавка/машина;

простір мавка {
  дія рідна_дія__з(
    М: адреса<Машина>,
    діяльність: адреса<Діяльність>
  ) -> ЗначенняАбоСтанПадіння {
    змінна задіяне_значення: Значення = НЕДІЙСНЕ;

    знайти_задіяне(М, діяльність.задіяні, 0, М.константи_назв._значення, задіяне_значення::адреса);

    якщо задіяне_значення.вид == ЗНедійсне {
      вернути ЧИСЛО(0.0);
    }

    якщо задіяне_значення.вид == ЗДійсне {
      вернути ЧИСЛО(1.0);
    }

    вернути здійснити_властивість(
      М,
      задіяне_значення,
      М.константи_назв._чародія_число,
      Задіяні { 0, пусто, 0, пусто },
      Місцезнаходження { пусто, 0 }
    );
  }

  місцева дія записати_дію_структури_Число__з(
    М: адреса<Машина>
  ) {
    змінна предмет_дії = створити_рідну_дію(
      М,
      М.константи_назв._з,
      М.предмет_пустої_послідовності як адреса<ПредметПослідовності>,
      пусто,
      рідна_дія__з,
      пусто
    );

    предмет_структури_змінити_властивість(
      М,
      М.предмет_структури_Число,
      М.константи_назв._з,
      МАШИННИЙ_ПРЕДМЕТ(предмет_дії),
      Місцезнаходження { пусто, 0 }
    );

    якщо М.стан_падіння {
      ЗАПАНІКУВАТИ(М, "Помилка при записі дії \"з\" для структури \"Число\".");
    }
  }
}