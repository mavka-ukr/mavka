взяти означення мавка/машина;

простір мавка {
  дія рідна_дія_методу_структури_Текст__чародія_число(
    М: адреса<Машина>,
    здійснювач: Значення,
    предмет_дії: адреса<ПредметДії>,
    задіяні: Задіяні
  ) -> ЗначенняАбоСтанПадіння {
    якщо здійснювач.вид != ЗПредмет {
      увімкнути_стан_падіння(
        М,
        ПРЕДМЕТ(створити_текст(М, "Неможливо здійснити дію тексту \"чародія_число\".")),
        Місцезнаходження { пусто, 0 }
      );
      вернути НЕДІЙСНЕ();
    }

    змінна предмет_тексту = здійснювач.дані як адреса<Предмет> як адреса<ПредметТексту>;

    якщо предмет_тексту.тип != М.предмет_структури_Текст {
      увімкнути_стан_падіння(
        М,
        ПРЕДМЕТ(створити_текст(М, "Неможливо здійснити дію тексту \"чародія_число\".")),
        Місцезнаходження { пусто, 0 }
      );
      вернути НЕДІЙСНЕ();
    }

    вернути НЕДІЙСНЕ();
  }

  місцева дія записати_метод_структури_Текст__чародія_число(
    М: адреса<Машина>
  ) {
    змінна предмет_дії = створити_рідну_дію(
      М,
      М.константи_назв._чародія_число,
      М.предмет_пустої_послідовності,
      пусто,
      рідна_дія_методу_структури_Текст__чародія_число,
      пусто
    );

    записати_метод_структури(
      М,
      М.предмет_структури_Текст,
      М.константи_назв._чародія_число,
      предмет_дії
    );

    якщо М.стан_падіння {
      запанікувати(М, "Помилка при записі дії \"чародія_число\" для структури \"Текст\".");
    }
  }
}