взяти означення мавка/машина;

простір мавка {
  дія рідна_дія_методу_структури_Послідовність__чародія_перебір(
    М: адреса<Машина>,
    здійснювач: Значення,
    предмет_дії: адреса<ПредметДії>,
    задіяні: Задіяні
  ) -> ЗначенняАбоСтанПадіння {
    якщо здійснювач.вид != ЗПредмет {
      вернути ПАДІННЯ(М, створити_текст(М, "Неможливо здійснити дію послідовності \"чародія_перебір\"."));
    }

    змінна предмет_послідовності = здійснювач.дані як адреса<Предмет> як адреса<ПредметПослідовності>;

    якщо предмет_послідовності.тип != М.предмет_структури_Послідовність {
      вернути ПАДІННЯ(М, створити_текст(М, "Неможливо здійснити дію послідовності \"чародія_перебір\"."));
    }

    вернути ПРЕДМЕТ(створити_перебір_послідовності(
      М,
      предмет_послідовності
    ));
  }

  місцева дія записати_метод_структури_Послідовність__чародія_перебір(
    М: адреса<Машина>
  ) {
    змінна предмет_дії = створити_рідну_дію(
      М,
      М.константи_назв._чародія_перебір,
      М.предмет_пустої_послідовності,
      пусто,
      рідна_дія_методу_структури_Послідовність__чародія_перебір,
      пусто
    );

    записати_метод_структури(
      М,
      М.предмет_структури_Послідовність,
      М.константи_назв._чародія_перебір,
      предмет_дії
    );

    якщо М.стан_падіння {
      ЗАПАНІКУВАТИ(М, "Помилка при записі дії \"чародія_перебір\" для структури \"Послідовність\".");
    }
  }
}