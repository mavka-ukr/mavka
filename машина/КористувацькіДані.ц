взяти означення мавка;

простір мавка {
  місцева дія створити_користувацькі_дані(
    М: адреса<Машина>,
    значення: невідома_адреса,
    дія_перед_знищенням: ДіяПередЗнищеннямКористувацькихДаних
  ) -> адреса<КористувацькіДані> {
    змінна користувацькі_дані = виділити<КористувацькіДані>(М);
    
    користувацькі_дані.значення = значення;
    користувацькі_дані.притримувач = пусто;
    користувацькі_дані.дія_перед_знищенням = дія_перед_знищенням;
    
    вернути користувацькі_дані;
  }

  місцева дія притримати_в_користувацьких_даних(
    М: адреса<Машина>,
    користувацькі_дані: адреса<КористувацькіДані>,
    значення: Значення
  ) -> адреса<Притримане> {
    якщо користувацькі_дані.притримувач == пусто {
      користувацькі_дані.притримувач = створити_притримувач(М);
    }

    вернути притримати(М, користувацькі_дані.притримувач, значення);
  }

  місцева дія відпустити_з_користувацьких_даних(
    М: адреса<Машина>,
    користувацькі_дані: адреса<КористувацькіДані>,
    притримане: адреса<Притримане>
  ) {
    відпустити_притримане(М, користувацькі_дані.притримувач, притримане);
  }
}