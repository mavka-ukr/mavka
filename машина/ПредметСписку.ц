взяти означення мавка;

простір мавка {
  місцева дія заповнити_структуру_Список(
    М: адреса<Машина>
  ) {

  }

  місцева дія створити_список(
    М: адреса<Машина>,
    розмір: природне
  ) -> адреса<ПредметСписку> {
    змінна предмет = виділити_предмет<ПредметСписку>(М, М.предмет_структури_Список);

    змінна дані: памʼять<Значення> = пусто;

    якщо розмір > 0 {
      дані = виділити_памʼять<Значення>(М, розмір);
      змінна п: природне = 0;

      поки п < розмір {
        дані[п] = пусто як Значення;

        п += 1;
      }
    }

    предмет.розмір = розмір;
    предмет.елементи = дані;

    вернути предмет;
  }

  місцева дія записати_в_список(
    М: адреса<Машина>,
    значення_списку: адреса<ПредметСписку>,
    позиція: природне,
    значення: Значення
  ) {
    змінна властивості = значення_списку;

    якщо позиція >= властивості.розмір {
      запанікувати(М, "Індекс виходить за межі списку");
    }

    властивості.елементи[позиція] = значення;
  }

  місцева дія предмет_списку_отримати_властивість(
    М: адреса<Машина>,
    предмет_списку: адреса<ПредметСписку>,
    назва: адреса<ПредметТексту>,
    місцезнаходження: Місцезнаходження
  ) -> ЗначенняАбоСтанПадіння {
    якщо назва == М.константи_назв._довжина або перевірити_чи_предмети_тексту_рівні(М, назва, М.константи_назв._довжина) {
      вернути створити_ціле(М, ц64(предмет_списку.розмір)) як Значення;
    }

    вернути пусто;
  }
}