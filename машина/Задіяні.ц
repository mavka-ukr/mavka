взяти означення мавка;

простір мавка {
  місцева дія знайти_задіяне(
    М: адреса<Машина>,
    задіяні: Задіяні,
    позиція: природне,
    назва: адреса<ПредметТексту>,
    вихід_значення: адреса<Значення>
  ) -> логічне {
    змінна знайдено = ні;

    якщо задіяні.розмір > позиція {
      вихід_значення::вміст = задіяні.дані[позиція];

      знайдено = так;
    }

    якщо задіяні.іменовано_задіяні != пусто {
      змінна п: природне = 0;

      поки п < задіяні.іменовано_задіяні.розмір {
        змінна елемент = задіяні.іменовано_задіяні.елементи[п];

        якщо перевірити_чи_значення_рівні(М, елемент.назва як Значення, назва як Значення) {
          вихід_значення::вміст = елемент.значення;

          вернути так;
        }

        п += 1;
      }
    }

    вернути знайдено;
  }

  місцева дія перебрати_позиційні_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні,
    дія_перебору: ДіяПереборуПозиційнихЗадіяних,
    аргумент: невідома_адреса
  ) {
    // ..
  }

  місцева дія перебрати_іменовані_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні,
    дія_перебору: ДіяПереборуІменованихЗадіяних,
    аргумент: невідома_адреса
  ) {
    // ..
  }

  місцева дія звільнити_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні
  ) {
    якщо задіяні.дані != пусто {
      звільнити_памʼять(М, задіяні.дані);
    }

    якщо задіяні.іменовано_задіяні != пусто {
      знищити_іменовано_задіяні(М, задіяні.іменовано_задіяні);
    }
  }
}