взяти означення мавка;

простір мавка {
  місцева дія знайти_задіяне(
    М: адреса<Машина>,
    задіяні: Задіяні,
    позиція: природне,
    назва: адреса<ПредметТексту>
  ) -> логічне {
    // ..
  }

  місцева дія перебрати_позиційні_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні,
    дія_перебору: ДіяПереборуПозиційнихЗадіяних,
    аргумент: невідома_адреса
  ) {
    // ..
  }

  місцева дія перебрати_іменовані_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні,
    дія_перебору: ДіяПереборуІменованихЗадіяних,
    аргумент: невідома_адреса
  ) {
    // ..
  }

  місцева дія звільнити_задіяні(
    М: адреса<Машина>,
    задіяні: Задіяні
  ) {
    якщо задіяні.дані != пусто {
      звільнити_памʼять(М, задіяні.дані);
    }

    якщо задіяні.іменовано_задіяні != пусто {
      знищити_іменовано_задіяні(М, задіяні.іменовано_задіяні);
    }
  }
}