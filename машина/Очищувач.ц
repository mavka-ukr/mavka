взяти означення мавка;

простір мавка {
  місцева дія перевірити_чи_треба_запустити_очищувач(
    М: адреса<Машина>
  ) -> логічне {
    вернути ні;
  }

  дія знищити_дійсне(
    М: адреса<Машина>,
    значення: адреса<Дійсне>
  ) {
    //
  }

  дія видалити_і_знищити_дійсне(
    М: адреса<Машина>,
    значення: адреса<Дійсне>
  ) {
    //
  }

  дія позначити(
    М: адреса<Машина>
  ) {
    //
  }

  місцева дія запустити_очищувач(
    М: адреса<Машина>
  ) {
    позначити(М);

    змінна значення = М.перше_дійсне;

    поки значення != пусто {
      якщо значення.позначено {
        значення.позначено = ні;

        значення = значення.наступне;
      } інакше {
        змінна значення_до_знищення = значення;

        значення = значення.наступне;

        видалити_і_знищити_дійсне(М, значення_до_знищення);

        М.кількість_дійсних -= 1;
      }
    }

    М.кількість_дійсних_для_очищення = (М.кількість_дійсних * 5) + 1;
  }
}