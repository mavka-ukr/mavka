взяти означення мавка/машина;

простір мавка {
  місцева дія створити_дійсність(
    М: адреса<Машина>,
    зовні: адреса<Дійсність>
  ) -> адреса<Дійсність> {
    змінна дійсність = виділити_дійсність(М);

    якщо зовні != пусто {
      дійсність.зовні = зовні;
      зовні.кількість_запозичень += 1;
    }

    вернути дійсність;
  }

  місцева дія записати_в_дійсність(
    М: адреса<Машина>,
    дійсність: адреса<Дійсність>,
    назва: адреса<ПредметТексту>,
    значення: Значення
  ) {
    записати_діяча(
      М,
      дійсність.діячі::адреса,
      назва,
      значення
    );
  }

  місцева дія знайти_в_дійсності(
    М: адреса<Машина>,
    дійсність: адреса<Дійсність>,
    назва: адреса<ПредметТексту>,
    вихід_значення: адреса<Значення>
  ) -> логічне {
    якщо знайти_діяча(
      М,
      дійсність.діячі,
      назва,
      вихід_значення
    ) {
      вернути так;
    }

    якщо дійсність.зовні != пусто {
      вернути знайти_в_дійсності(
        М,
        дійсність.зовні,
        назва,
        вихід_значення
      );
    }

    вернути ні;
  }
}