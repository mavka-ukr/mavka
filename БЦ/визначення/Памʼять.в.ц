зовнішня дія __біб__виділити_сиру_памʼять(розмір: природне) -> памʼять<п8>;
зовнішня дія __біб__перевиділити_сиру_памʼять(значення: памʼять<п8>, розмір: природне) -> памʼять<п8>;
зовнішня дія __біб__звільнити_сиру_памʼять(значення: памʼять<п8>);

простір біб {
  дія виділити<Т>() -> адреса<Т>;
  дія перевиділити<Т>(значення: адреса<Т>, кількість: природне) -> памʼять<Т>;
  дія звільнити(значення: невідома_адреса);
  дія виділити_памʼять<Т>(кількість: природне) -> памʼять<Т>;
  дія перевиділити_памʼять<Т>(значення: памʼять<Т>, кількість: природне) -> памʼять<Т>;
  дія звільнити_памʼять(значення: невідома_памʼять);

  дія виділити<Т>() -> адреса<Т> {
    вернути __біб__виділити_сиру_памʼять(Т.розмір) як адреса<Т>;
  }

  дія перевиділити<Т>(значення: адреса<Т>, кількість: природне) -> памʼять<Т> {
    вернути __біб__перевиділити_сиру_памʼять(значення як невідома_адреса, кількість * Т.розмір) як памʼять<Т>;
  }

  дія звільнити(значення: невідома_адреса) {
    __біб__звільнити_сиру_памʼять(значення як памʼять<п8>);
  }

  дія виділити_памʼять<Т>(кількість: природне) -> памʼять<Т> {
    вернути __біб__виділити_сиру_памʼять(кількість * Т.розмір) як памʼять<Т>;
  }

  дія перевиділити_памʼять<Т>(значення: памʼять<Т>, кількість: природне) -> памʼять<Т> {
    вернути __біб__перевиділити_сиру_памʼять(значення як памʼять<п8>, кількість * Т.розмір) як памʼять<Т>;
  }

  дія звільнити_памʼять(значення: невідома_памʼять) {
    __біб__звільнити_сиру_памʼять(значення як памʼять<п8>);
  }
}